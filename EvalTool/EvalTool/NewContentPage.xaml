<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EvalTool.NewContentPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Entry x:Name="UsernameEntry"  Placeholder="Place your username here "></Entry>
            <Entry x:Name="TeamnameEntry"  Placeholder="Place your teamname here "></Entry>

            <Label x:Name="ShowName" ></Label>
            <Label x:Name="ShowTeam" ></Label>
            
            <Button Text="Press Me" Clicked="SwitchPage"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>