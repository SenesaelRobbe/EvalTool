<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EvalTool.SecondContentPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to the second page!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
    
            <Label x:Name="Uname" Text="{Binding Username}"></Label>
            <Label x:Name="Tname" Text="{Binding Teamname}"></Label>

            
            <Slider x:Name="UserExp" Maximum="6" Minimum="1" ValueChanged="ChangeText"></Slider>
            <Slider x:Name="Implement" Maximum="6" Minimum="1" ValueChanged="ChangeText"></Slider>
            <Slider x:Name="Research" Maximum="6" Minimum="1" ValueChanged="ChangeText"></Slider>
            <Slider x:Name="Presentation" Maximum="6" Minimum="1" ValueChanged="ChangeText"></Slider>
            <Slider x:Name="Overall" Maximum="6" Minimum="1" ValueChanged="ChangeText"></Slider>

            <Label Text="Remarks you possibly have : "></Label>
            <Editor x:Name="Remarks" ></Editor>
            <Button Clicked="StoreAll"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>